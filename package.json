{
    "name": "middle.messenger.praktikum",
    "private": false,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --port 3000",
        "prebuild": "tsc --noEmit",
        "build": "npm run prebuild && vite build",
        "start": "vite build && vite preview --port 3000",
        "prettier": "npx prettier . --write",
        "eslint": "eslint \"src/**/*.[jt]s\"",
        "stylelint": "stylelint \"src/**/*.scss\"",
        "lint": "tsc --noEmit && npm run stylelint && npm run eslint",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/**/*.spec.mjs'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm-run-all lint"
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/chai": "^5.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.4",
        "chai": "^5.2.0",
        "eslint": "^9.12.0",
        "globals": "^15.11.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "mocha": "^11.1.0",
        "mocha-jsdom": "^1.2.0",
        "mock-xmlhttprequest": "^8.4.1",
        "prettier": "3.3.3",
        "raw-loader": "^4.0.2",
        "sass": "^1.79.4",
        "stylelint": "^16.12.0",
        "stylelint-config-standard": "^36.0.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.9.0",
        "vite": "^6.3.1",
        "vite-plugin-handlebars": "^1.5.0",
        "vite-plugin-static-copy": "^2.2.0"
    },
    "engines": {
        "node": ">=20.0.0 <22.10.0"
    },
    "dependencies": {
        "@types/handlebars-helpers": "^0.5.6",
        "handlebars": "^4.7.8",
        "hbs": "^4.2.0",
        "sinon": "^20.0.0"
    }
}
